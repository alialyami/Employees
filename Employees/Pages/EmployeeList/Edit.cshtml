@page
@model Employees.Pages.EmployeeList.EditModel


<br />
<h2 class="text-info">Edit Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>First Name</label>
            </div>
            <div class="col-5">
                <input asp-for="Employee.EmployeeFirstName" class="form-control" />
            </div>
            <span asp-validation-for="Employee.EmployeeFirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Last Name</label>
            </div>
            <div class="col-5">
                <input asp-for="Employee.EmployeeLastName" class="form-control" />
            </div>
            <span asp-validation-for="Employee.EmployeeLastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Employer</label>
            </div>
            <div class="col-5">
                <input asp-for="Employee.Employer" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Employer" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Salary</label>
            </div>
            <div class="col-5">
                <input asp-for="Employee.Salary" class="form-control" />
            </div>
            <span asp-validation-for="Employee.Salary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

