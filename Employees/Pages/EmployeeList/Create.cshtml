@page
@model Employees.Pages.EmployeeList.CreateModel

<br />
<h2 class="text-info">Add New Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label>First Name</label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.EmployeeFirstName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Last Name</label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.EmployeeLastName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Employer</label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Employer" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Salary</label>
            </div>
            <div class="col-6">
                <input asp-for="Employee.Salary" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-4">
                <input type="submit" value="Add" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

