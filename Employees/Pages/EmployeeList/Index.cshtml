@page
@model Employees.Pages.EmployeeList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Employee List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-dark">Add New Employee</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Employees.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label>ID</label>
                        </th>
                        <th>
                            <label>Full Name</label>
                        </th>
                        <th>
                            <label>Employer</label>
                        </th>
                        <th>
                            <label>Salary</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.EmployeeFirstName)
                                @Html.DisplayFor(m => item.EmployeeLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Employer)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Salary)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('This employee will be deleted?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Employees available</p>
            }
        </form>
    </div>
</div>

